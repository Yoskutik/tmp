{"ast":null,"code":"import { useCallback, useEffect, useState } from 'react';\nexport var useEventListener = function useEventListener(target, event, listener) {\n  var trigger = arguments.length > 3 && arguments[3] !== undefined ? arguments[3] : true;\n  useEffect(function () {\n    target.addEventListener(event, listener);\n    trigger && target.dispatchEvent(new Event(event));\n    return function () {\n      return target.removeEventListener(event, listener);\n    };\n  });\n};\nexport var useBooleanState = function useBooleanState(value) {\n  var _useState = useState(value),\n      state = _useState[0],\n      setState = _useState[1];\n\n  var enable = useCallback(function () {\n    return setState(true);\n  }, []);\n  var disable = useCallback(function () {\n    return setState(false);\n  }, []);\n  return [state, enable, disable];\n};","map":null,"metadata":{},"sourceType":"module"}